{
    "name": "terminal42/contao-root-protection",
    "type": "contao-bundle",
    "description": "A Contao bundle that allows you to protect individual root pages via HTTP Basic Authentication",
    "keywords": ["contao", "root", "htaccess", "protection"],
    "license": "MIT",
    "authors": [
        {
            "name": "terminal42 gmbh",
            "homepage": "https://www.terminal42.ch"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/terminal42"
        },
        {
            "type": "other",
            "url": "https://ko-fi.com/terminal42"
        }
    ],
    "support": {
        "issues": "https://github.com/terminal42/contao-root-protection/issues",
        "source": "https://github.com/terminal42/contao-root-protection",
        "forum": "https://community.contao.org"
    },
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^4.13 || ^5.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "terminal42/contao-build-tools": "dev-main"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Terminal42\\RootProtectionBundle\\": "src"
        }
    },
    "extra": {
        "contao-manager-plugin": "Terminal42\\RootProtectionBundle\\ContaoManager\\Plugin"
    }
}
